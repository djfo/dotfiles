execute pathogen#infect()

set nocp

set et
set ts=8
set sts=2
set sw=2
set ai
set nu
set relativenumber

set incsearch
set ruler

set backspace=indent,eol,start
set wrap
set linebreak
set showbreak=â€¦
set ignorecase

set showcmd
set ruler
set statusline=%<%f\ 0x%02B\ %h%m%r%=%-14.(%l,%c%V%)\ %P

set nobackup
set writebackup

if has("gui_running")
  set guifont=Terminus\ 12
  colorscheme desert
  set guioptions-=m  "remove menu bar
  set guioptions-=T  "remove toolbar
endif

noremap <silent> <expr> j (v:count == 0 ? 'gj' : 'j')
noremap <silent> <expr> k (v:count == 0 ? 'gk' : 'k')

" previous/next tab using C-n and C-p
nmap  :tabp<CR>
nmap  :tabn<CR>

" hide highlighted search
nnoremap <silent> <C-l> :<C-u>nohlsearch<CR><C-l>

" move link up/down using C-k and C-j
map <c-k> kddpk
map <c-j> ddp

" open/close fold using <space>
nnoremap <space> za

syntax on

let mapleader=","
"let mapleader="\<Space>"
noremap <Leader>hey :echo "Hey, ho, let's go!"<cr>
