execute pathogen#infect()

set nocp
syntax on
filetype plugin on

set et
set ts=8
set sts=2
set sw=2
set ai
set nu
set relativenumber

set incsearch
set ruler

set backspace=indent,eol,start
set wrap
set linebreak
set showbreak=â€¦
set ignorecase

set showcmd
set ruler
set statusline=%<%f\ 0x%02B\ %h%m%r%=%-14.(%l,%c%V%)\ %P

set nobackup
set writebackup

set path+=**
set wildmenu

if has("gui_running")
  set guifont=Terminus\ 12
  colorscheme desert
  set guioptions-=m  "remove menu bar
  set guioptions-=T  "remove toolbar
endif

" previous/next tab using C-n and C-p
nmap  :tabp<CR>
nmap  :tabn<CR>

" hide highlighted search
nnoremap <silent> <C-l> :<C-u>nohlsearch<CR><C-l>

" move link up/down using C-k and C-j
map <c-k> kddpk
map <c-j> ddp

" open/close fold using <space>
nnoremap <space> za

let mapleader=","
"let mapleader="\<Space>"
noremap <Leader>hey :echo "Hey, ho, let's go!"<cr>

vmap <Leader>a= :Tabularize /=<CR>
vmap <Leader>a; :Tabularize /::<CR>
vmap <Leader>a- :Tabularize /-><CR>

" asy

augroup filetypedetect
au BufNewFile,BufRead *.asy     setf asy
augroup END
